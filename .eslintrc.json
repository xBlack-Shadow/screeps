{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "screeps/screeps":  true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": ["warn", 4]
    },
    "plugins": [
        "screeps"
    ],
    "ignorePatterns": ["screeps.profiler.js"]
}
